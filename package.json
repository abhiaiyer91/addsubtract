{
  "name": "wit",
  "version": "2.0.0",
  "description": "A modern Git implementation in TypeScript with AI-powered features - SHA-256, built-in UI, undo support, AI commit messages, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wit": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "npx tsx watch src/cli.ts serve",
    "dev:cli": "npx tsx src/cli.ts",
    "dev:web": "cd apps/web && npm run dev",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run tests/integration",
    "test:unit": "vitest run src",
    "prepublishOnly": "npm run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "npx tsx src/db/seed.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:db": "docker compose up db -d",
    "docker:build": "docker compose build",
    "serve": "node dist/cli.js serve",
    "wit": "npx tsx src/cli.ts"
  },
  "keywords": [
    "git",
    "version-control",
    "typescript",
    "vcs",
    "sha256",
    "tui",
    "cli",
    "ai",
    "llm",
    "mastra",
    "commit-message",
    "code-review",
    "semantic-search",
    "embeddings",
    "rag",
    "wit"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/trpc-server": "^0.4.1",
    "@mastra/core": "^1.0.0-beta.17",
    "@trpc/client": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@types/blessed": "^0.1.27",
    "blessed": "^0.1.81",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "superjson": "^2.2.6",
    "uuid": "^13.0.0",
    "zod": "^3.23.0"
  },
  "engines": {
    "node": ">=22.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abhiaiyer91/wit"
  },
  "optionalDependencies": {
    "@ai-sdk/openai": "^3.0.1",
    "ai": "^6.0.3"
  }
}
